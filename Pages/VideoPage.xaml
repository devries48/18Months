<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Months18.Pages.VideoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Months18.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:helpers="clr-namespace:Months18.Helpers"
    xmlns:models="clr-namespace:Months18.Models">

    <ContentPage.Resources>
        <Style x:Key="ButtonClickableStyle" TargetType="Button">
            <Style.Behaviors>
                    <toolkit:AnimationBehavior EventName="Clicked">
                        <toolkit:AnimationBehavior.AnimationType>
                            <helpers:ScaleAnimation Easing="{x:Static Easing.Linear}" Length="100" />
                        </toolkit:AnimationBehavior.AnimationType>
                    </toolkit:AnimationBehavior>
            </Style.Behaviors>
        </Style>
    </ContentPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--<controls:MarqueeLabel Text="This is a marquee label"/>-->
        <!--<controls:MarqueeLabel
            Grid.Row="1"
            Style="{StaticResource MarqueeSecondaryStyle}"
            Text="She Brings The Rain (From Bottom - Ein Großer Graublauer Vogel)" />-->

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="200"/>
                <ColumnDefinition  Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Text="Click this Button" Margin="16,0" Style="{StaticResource ButtonClickableStyle}"/>
            <!--<Button.Behaviors>
                    <toolkit:AnimationBehavior EventName="Clicked">
                        <toolkit:AnimationBehavior.AnimationType>
                            <helpers:ScaleAnimation
                            Easing="{x:Static Easing.Linear}"
                            Length="100"/>
                        </toolkit:AnimationBehavior.AnimationType>
                    </toolkit:AnimationBehavior>
                </Button.Behaviors>
            </Button>-->
            <Button Grid.Row="1" Style="{StaticResource ButtonClickableStyle}"
                              BackgroundColor="{StaticResource Dark_Accent}"
                              CornerRadius="30"
                              HorizontalOptions="Start"
                              HeightRequest="30"
                              WidthRequest="30">
                <Button.ImageSource>
                    <FontImageSource
                                      Color="{StaticResource Dark_AccentText}"
                                      FontFamily="MaterialIcons"
                                      Glyph="{x:Static helpers:IconFont.Play_arrow}"/>
                </Button.ImageSource>
            </Button>
            <controls:MarqueeLabel
                x:Name="testLabel"
                Grid.Row="2"
                FontSize="16"
                HeightRequest="22"
                Style="{StaticResource MarqueeSecondaryStyle}"
                Text="She Brings The Rain (From Bottom - Ein Großer Graublauer Vogel)" />
            <Button Grid.Row="1" Grid.Column="1" Text="STOP" Clicked="Button_Clicked" />
        </Grid>

        <ScrollView
            Margin="0"
            Background="red"
            HorizontalScrollBarVisibility="Never"
            Orientation="Horizontal"
            Padding="0">
            <Label
                x:Name="marqueeLabel"
                Background="DarkBlue"
                LineBreakMode="NoWrap"
                Text="Manual marquee label and it is very long"
                TranslationX="0" />
        </ScrollView>
    </Grid>
</ContentPage>